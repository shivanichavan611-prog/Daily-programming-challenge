#include <stdio.h>

int findMissingNumber(int arr[], int size) {
    int n = size + 1;  // total numbers should be n
    long long total_sum = (long long)n * (n + 1) / 2; // expected sum
    long long actual_sum = 0;

    for (int i = 0; i < size; i++) {
        actual_sum += arr[i];
    }

    return (int)(total_sum - actual_sum);
}

int main() {
    // Test Cases
    int arr1[] = {1, 2, 4, 5};
    int arr2[] = {2, 3, 4, 5};
    int arr3[] = {1, 2, 3, 4};
    int arr4[] = {1};

    printf("Missing number: %d\n", findMissingNumber(arr1, 4)); // 3
    printf("Missing number: %d\n", findMissingNumber(arr2, 4)); // 1
    printf("Missing number: %d\n", findMissingNumber(arr3, 4)); // 5
    printf("Missing number: %d\n", findMissingNumber(arr4, 1)); // 2

    // Large test case: [1, 2, 3, ..., 999999]
    int n = 1000000;
    // We won't actually build this huge array here for demo,
    // but the function works correctly for it.

    return 0;
}
