#include <stdio.h>
#include <stdlib.h>

// Define maximum size of stack
#define MAX 10000

// Structure for stack
typedef struct {
    int arr[MAX];
    int top;
} Stack;

// Initialize stack
void initStack(Stack *s) {
    s->top = -1;
}

// Check if stack is empty
int isEmpty(Stack *s) {
    return s->top == -1;
}

// Check if stack is full
int isFull(Stack *s) {
    return s->top == MAX - 1;
}

// Push an element into the stack
void push(Stack *s, int val) {
    if (isFull(s)) {
        printf("Stack overflow\n");
        return;
    }
    s->arr[++s->top] = val;
}

// Pop an element from the stack
int pop(Stack *s) {
    if (isEmpty(s)) {
        printf("Stack underflow\n");
        exit(1);
    }
    return s->arr[s->top--];
}

// Peek the top element
int peek(Stack *s) {
    if (isEmpty(s)) {
        printf("Stack is empty\n");
        exit(1);
    }
    return s->arr[s->top];
}

// Insert element at the bottom of the stack (recursive)
void insertAtBottom(Stack *s, int val) {
    if (isEmpty(s)) {
        push(s, val);
        return;
    }
    int temp = pop(s);
    insertAtBottom(s, val);
    push(s, temp);
}

// Reverse the stack (recursive)
void reverseStack(Stack *s) {
    if (isEmpty(s)) return;
    int temp = pop(s);
    reverseStack(s);
    insertAtBottom(s, temp);
}

// Display the stack from bottom to top
void display(Stack *s) {
    for (int i = 0; i <= s->top; i++) {
        printf("%d ", s->arr[i]);
    }
    printf("\n");
}

// Driver code
int main() {
    Stack s;
    initStack(&s);

    // Example input
    push(&s, 1);
    push(&s, 2);
    push(&s, 3);
    push(&s, 4);

    printf("Original Stack: ");
    display(&s);

    reverseStack(&s);

    printf("Reversed Stack: ");
    display(&s);

    return 0;
}
