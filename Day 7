#include <stdio.h>

// Function to calculate trapped rain water
int trap(int* height, int n) {
    if (n < 3) return 0;  // Less than 3 bars can't trap water

    int left = 0, right = n - 1;
    int leftMax = 0, rightMax = 0;
    int water = 0;

    while (left < right) {
        if (height[left] < height[right]) {
            if (height[left] >= leftMax) {
                leftMax = height[left];
            } else {
                water += leftMax - height[left];
            }
            left++;
        } else {
            if (height[right] >= rightMax) {
                rightMax = height[right];
            } else {
                water += rightMax - height[right];
            }
            right--;
        }
    }
    return water;
}

int main() {
    // Test cases
    int height1[] = {0, 1, 0, 2, 1, 0, 1, 3, 2, 1, 2, 1};
    int height2[] = {4, 2, 0, 3, 2, 5};
    int height3[] = {1, 1, 1};
    int height4[] = {5};
    int height5[] = {2, 0, 2};

    printf("Output 1: %d\n", trap(height1, 12)); // Expected 6
    printf("Output 2: %d\n", trap(height2, 6));  // Expected 9
    printf("Output 3: %d\n", trap(height3, 3));  // Expected 0
    printf("Output 4: %d\n", trap(height4, 1));  // Expected 0
    printf("Output 5: %d\n", trap(height5, 3));  // Expected 2

    return 0;
}
